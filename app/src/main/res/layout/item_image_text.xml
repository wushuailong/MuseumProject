<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.gyx.museum.widget.ScaleImageView
            android:id="@+id/imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/tq_img01"
            />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/height_10"
            android:textSize="@dimen/size_18"
            tools:text="【西周】大克鼎"
            android:textColor="@color/yellow"
            />
        <TextView
            android:id="@+id/code_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/height_10"
            android:layout_marginLeft="@dimen/height_10"
            android:textSize="@dimen/size_14"
            tools:text="编号：YTH100"
            android:textColor="@color/home_color"
            />
    </LinearLayout>


</android.support.v7.widget.CardView>