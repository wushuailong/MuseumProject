<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_lv">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/gc_xq_bg"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="0dp"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/info_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/height_45"
                >
                <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年代：西周孝王"
                    android:textColor="@color/home_color"
                    />
                <TextView
                    android:id="@+id/info_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="高91.1厘米 口径75.6厘米 "
                    android:textColor="@color/home_color"
                    android:layout_marginTop="@dimen/height_10"
                    android:textSize="@dimen/size_18"
                    />
                <TextView
                    android:id="@+id/tizhong_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重201.5公斤"
                    android:textColor="@color/home_color"
                    android:textSize="@dimen/size_18"
                    android:layout_marginTop="@dimen/height_5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编号：YHO120"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/size_14"
                    android:layout_marginTop="@dimen/height_8"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/heigmt_40"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/height_20"
                android:layout_marginTop="@dimen/height_16"
                android:gravity="right"

                >
                <ImageView
                    android:id="@+id/more_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/gc_xq_01"
                    android:layout_gravity="center_horizontal"
                    />
                <com.gyx.museum.expandable.ExpandableLayout
                    android:id="@+id/expandLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:el_duration="500"
                    app:el_expanded="true"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="right"
                        >
                        <ImageView
                            android:id="@+id/share_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/gc_xq_02"
                            android:paddingTop="@dimen/height_16"
                            android:layout_gravity="center_horizontal"

                            />
                        <ImageView
                            android:id="@+id/collect_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/qc_xq_03"
                            android:paddingTop="@dimen/height_16"
                            android:layout_gravity="center_horizontal"
                            />
                        <ImageView
                            android:id="@+id/other_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/gc_xq_04"
                            android:paddingTop="@dimen/height_16"
                            android:layout_gravity="center_horizontal"
                            />
                    </LinearLayout>

                </com.gyx.museum.expandable.ExpandableLayout>

            </LinearLayout>

        </RelativeLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/det_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/gc_details_img"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/height_20"
                android:layout_marginBottom="@dimen/height_20"
                />

            <ImageView
                android:id="@+id/fangda_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                  android:src="@mipmap/gc_xq_fdj"
                android:layout_gravity="center_vertical"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/height_20"
            >
            <ImageView
                android:id="@+id/zhishi_img"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/qc_xq_zhishi"
                />
            <ImageView
                android:id="@+id/details_img"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/gc_xq_xijie"
                />
            <ImageView
                android:id="@+id/dingwei_img"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/gc_xq_diwei"
                />
            <ImageView
                android:id="@+id/jieshuo_img"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/gc_xq_jieshuo"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/detfd_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_450"
        android:src="@mipmap/gc_details_img"
       android:layout_centerVertical="true"
        android:visibility="gone"
        />



</RelativeLayout>