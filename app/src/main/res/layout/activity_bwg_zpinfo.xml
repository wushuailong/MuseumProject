<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bwg_trans"
    android:paddingLeft="@dimen/height_9"
    android:paddingRight="@dimen/height_9"
    android:id="@+id/id_root_lv"

    >
    <ImageView
        android:id="@+id/close_img"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_48"
        android:src="@mipmap/close_icon"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/height_9"

        />
    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="衍生知识"
        android:textSize="@dimen/size_18"
        />
    <TextView
        android:id="@+id/content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/height_25"
        android:lineSpacingMultiplier="1.2"
        android:text="知识介绍知识介绍知识介绍知识介绍知识介绍知识介 绍知识介绍知识介绍知识介绍知识介绍知识介绍知识 知识介绍知识介绍知识介绍知识介"
        />
</LinearLayout>