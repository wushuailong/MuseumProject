<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingBottom="1dp"
    app:ios="false"
    app:leftSwipe="true"
    android:layout_marginTop="@dimen/height_15"
    app:swipeEnable="true">
<LinearLayout
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/height_8"
    android:paddingRight="@dimen/height_8"

    >
    <ImageView
        android:layout_width="@dimen/height_135"
        android:layout_height="wrap_content"
        android:src="@mipmap/my_collect_zp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/height_8"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="废纸三千--刘春杰作品展"
            android:textColor="@color/home_color"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="展览时间：2017-11-25--2017-11-30"
            android:textColor="@color/my_line"
            android:textSize="@dimen/size_12"
            android:layout_marginTop="@dimen/height_8"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="展览地点：太原市博物馆忠王府对面"
            android:textColor="@color/my_line"
            android:textSize="@dimen/size_12"
            android:layout_marginTop="@dimen/height_5"
            />
    </LinearLayout>
   </LinearLayout>
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="@dimen/height_70"
        android:layout_height="match_parent"
        android:background="@color/yellow"
        android:text="取消\n收藏"
        android:textSize="@dimen/size_18"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/white"/>
    </com.mcxtzhang.swipemenulib.SwipeMenuLayout>